// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  username   String?
  password   String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
  //Profile ดึงมา
  profileid  String?
  Profile    Profile?  @relation(fields: [profileid], references: [id])
  //Reserve ดึงไป
  Reserve    Reserve[]
}

model Profile {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  fname      String?
  lname      String?
  phone      String?
  email      String?
  img        String?
  birthday   String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
  //Address ดึงมา
  addressid  String?
  Address    Address?  @relation(fields: [addressid], references: [id])
  //User ดึงไป
  User       User[]
}

model Address {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  province    String?
  subdistrict String?
  district    String?
  zipcode     String?
  addressno   String?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
  deleted_at  DateTime? @map("deleted_at")
  // Profile  ดึงไป
  Profile     Profile[]
}

model Reserve {
  id                   String              @id @default(auto()) @map("_id") @db.ObjectId
  User                 User?               @relation(fields: [userId], references: [id])
  userId               String?             @db.ObjectId
  ReserveDetail        ReserveDetail?      @relation(fields: [reserveDetailId], references: [id])
  reserveDetailId      String?             @db.ObjectId
  ReserveProductTpye   ReserveProductTpye? @relation(fields: [reserveProductTpyeId], references: [id])
  reserveProductTpyeId String?             @db.ObjectId
  createdAt            DateTime?           @default(now())
  updatedAt            DateTime?           @updatedAt
  deleted_at           DateTime?           @map("deleted_at")
}

model ReserveDetail {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  date        String?
  time        String?
  Description String?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
  deleted_at  DateTime? @map("deleted_at")
  //Reserve ดึงไป
  Reserve     Reserve[]
}

model ReserveProductTpye {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  reservename String?
  createdAt   DateTime? @default(now())
  updatedAt   DateTime? @updatedAt
  deleted_at  DateTime? @map("deleted_at")
  //Reserve ดึงไป
  Reserve     Reserve[]
}

model Blog {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  title      String?
  subtitle   String?
  detail     String?
  date       String?
  author     String? //ผู้เขียน
  refer      String? //อ้างอิง
  img        String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

model News {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  title      String?
  subtitle   String?
  detail     String?
  date       String?
  author     String? //ผู้เขียน
  refer      String? //อ้างอิง
  img        String?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  deleted_at DateTime? @map("deleted_at")
}

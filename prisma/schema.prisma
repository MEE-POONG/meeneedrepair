// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  username  String?
  password  String?
  //Profile ดึงมา
  profileid String?
  Profile   Profile?  @relation(fields: [profileid], references: [id])
  //Reserve ดึงไป
  Reserve   Reserve[]
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  fname     String?
  lname     String?
  phone     String?
  email     String?
  img       String?
  birthday  String?
  //Address ดึงมา
  addressid String?
  Address   Address? @relation(fields: [addressid], references: [id])
  //User ดึงไป
  User      User[]
}

model Address {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  province    String?
  subdistrict String?
  district    String?
  zipcode     String?
  addressno   String?
  // Profile  ดึงไป
  Profile     Profile[]
}

model Reserve {
  id                   String              @id @default(auto()) @map("_id") @db.ObjectId
  User                 User?               @relation(fields: [userId], references: [id])
  userId               String?             @db.ObjectId
  ReserveDetail        ReserveDetail?      @relation(fields: [reserveDetailId], references: [id])
  reserveDetailId      String?             @db.ObjectId
  ReserveProductTpye   ReserveProductTpye? @relation(fields: [reserveProductTpyeId], references: [id])
  reserveProductTpyeId String?             @db.ObjectId
}

model ReserveDetail {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  date        String?
  time        String?
  Description String?
  //Reserve ดึงไป
  Reserve     Reserve[]
}

model ReserveProductTpye {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  reservename String?
  //Reserve ดึงไป
  Reserve     Reserve[]
}
